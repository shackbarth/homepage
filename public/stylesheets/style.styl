centered()
  text-align: center
  margin-left: auto
  margin-right: auto

body
  font-family: lucinda grande, helvetica neue, sans-serif
  font-size: 16px
  background-position: center center
  background-attachment: fixed
  background-size: 100%

.title
  centered()
  color: black
  height: 80vh
  h1
    font-size: 64px
    font-weight: bold
    text-transform: capitalize

.markdown-content
  background-color: #ebebeb
  padding-top: 10px
  padding-botton: 10px
  hr
    border-top-color: black
  h1, h2, h3, h4, h5, h6, .footer
    centered()
  .table-of-contents
    padding-bottom: 10px
    margin-bottom: 10px
    h3
      text-align: left
    em
      padding-left: 15px
    border-bottom: 1px solid black
