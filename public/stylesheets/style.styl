centered()
  text-align: center
  margin-left: auto
  margin-right: auto
 
slide()
  background-position: center center
  background-attachment: fixed
  width: 100%
  height: 100%

body
  background-color: #666666
  font-family: gotham
  font-size: 16px

.title
  centered()
  padding-top: 30px;

.markdown-content
  background-color: #ebebeb
  h1, h2, h3, h4, h5, h6, .footer
    centered()
  pre
    background-color: white
  blockquote
    font-family: garamond
    border-left: 0px
    p
      padding: 10px
      background-color: #FAEBD7
      font-family: courier
      font-size: 14px

.crisp-background
  slide()
  background-image:url('../images/aubrect_2.jpg')
  height: 5%

.blur-background
  slide()
  background-image:url('../images/aubrect_blur.jpg')
  opacity: 0.5
  z-index: 1
