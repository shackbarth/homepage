centered()
  text-align: center
  margin-left: auto
  margin-right: auto
 
slide()
  background-position: center center
  background-attachment: fixed
  background-size: cover
  width: 100%
  height: 100%

body
  background-color: #666666
  font-family: garamond, serif
  font-size: 16px

.title
  centered()
  color: black
  h1
    font-size: 64px
    font-weight: bold
    text-transform: capitalize

.markdown-content
  background-color: #ebebeb
  h1, h2, h3, h4, h5, h6, .footer
    centered()

.crisp-background
  slide()
  height: 1000px;

.blur-background
  slide()
  z-index: 1
