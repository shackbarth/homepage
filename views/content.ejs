<!DOCTYPE html>
<html>
<head>
    <title><%- title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap -->
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" />
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
  <div class="crisp-background" style="background-image:url('<%- image %>')">
    <div class="col-md-5 col-md-offset-2 title">
      <h1><%- title %></h1>
      <em><%- subtitle %></em>
    </div>
  </div>
  <div style="background-image:url('<%- imageBlur %>')"
      class="blur-background"
      data-0="opacity: 0;"
      data-top="opacity: 1;">
    <div id="skrollr-body" class="col-md-6 col-md-offset-3 markdown-content img-rounded">
      <% for(var i = 0; typeof pages !== 'undefined' && i < pages.length; i++) {%>
         <h3><a href="/<%= pages[i].file %>"><%= pages[i].title %></a></h3>
         <%= pages[i].subtitle %>
      <% } %>
      <%- markdown %>
    </div>
  </div>

  <script type="text/javascript" src="javascripts/skrollr.min.js"></script>
  <script type="text/javascript">
    skrollr.init();
  </script>
</body>
</html>
